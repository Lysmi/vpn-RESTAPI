    "version": "2.0.0",
    "tasks": [
        {
            "label": "env generate",
            "type": "shell",
            "command": "dart pub run environment_config:generate --config-extension=dev"
        },
        {
            "label": "run build runner",
            "type": "shell",
            "command": "dart pub run build_runner build"
        },
        {
            "label": "build",
            "dependsOn": ["env generate", "run build runner"]
        }
    ]
}